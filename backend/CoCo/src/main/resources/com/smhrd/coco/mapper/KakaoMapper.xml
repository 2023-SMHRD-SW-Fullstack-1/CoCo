<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.coco.mapper.KakaoMapper">

	<!-- 카카오 이메일 조회 -->
	<select id="selectEmail">
		select count(*) from TB_CUST where CUST_ID
		=#{CUST_ID};
	</select>

	<!-- 이미지 경로 가져오기 -->
	<select id="img">
		select CUST_IMG from TB_CUST where
		CUST_ID=#{CUST_ID};
	</select>

	<!-- 첫 로그인 기본 정보 DB에 저장 -->
	<insert id="firstLogin"
		parameterType="com.smhrd.coco.domain.TB_CUST">
		insert into TB_CUST values( #{CUST_ID}, #{CUST_NICK},
		#{CUST_CAREER},
		#{CUST_IMG}, #{CUST_GIT}, #{CUST_ROLE})
	</insert>
</mapper>