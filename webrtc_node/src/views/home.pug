doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.15.4/css/all.css", integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm", crossorigin="anonymous")
        //- link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        link(rel="stylesheet", href="./public/css/style.css")
        title CoCo
    body 
        header
            h1 CoCo
        main
            div#call(class="call")
                div#streamBox
                    div#streams
                        div#myStream(class="people1")
                            video#myFace(autoplay, playsinline, width="400", height="400")
                            h3#userNickname  
                    div#controlers
                        div#controlers__column
                            select#cameras
                        div#controlers__column
                            div#buttons
                                button#mute
                                    i(class="fas fa-microphone fa-2x unMuteIcon")
                                    i(class="fas fa-microphone-slash fa-2x muteIcon")
                                button#camera 
                                    i(class="fas fa-video fa-2x cameraIcon")
                                    i(class="fas fa-video-slash fa-2x unCameraIcon")
                                button#shareScreen 
                                    i(class="fas fa-video fa-2x screenIcon")
                                    i(class="fas fa-video-slash fa-2x unscreenIcon")
                        div#controlers__column
                            button#chat 
                                i(class="fas fa-comments fa-2x messageIcon")
                            button#leave 나가기
                div#chatRoom
                    ul#chatBox
                    form#chatForm
                        input(required, type="text", placeholder="메세지를 입력하세요")
                        button 전송
        aside.modal.hidden
            div.modal__box
                h2.modal__text
                button.modal__btn OK

        script.
            const callUserName = !{JSON.stringify(userName)};
            const callRoomName = !{JSON.stringify(roomName)};
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")